{
    "openapi": "3.1.0",
    "info": {
        "title": "Get current directory",
        "description": "获取用户当前工作目录及其文件树",
        "version": "v1.0.0"
    },
    "servers": [
    {
        "url": "http://192.168.1.3:5000"
    }
    ],
    "paths": {
        "/cd":{
            "get":{
                "description":"获取用户当前工作目录",
                "operationId":"GetCurrentDirectory",
                "parameters":[]
            }
        },
        "/ls":{
            "get":{
                "description":"获取用户当前工作目录下的文件树",
                "operationId":"GetFiles",
                "parameters":[
                    {
                        "name":"p",
                        "in":"query",
                        "description":"用户当前的工作目录",
                        "required":true,
                        "schema":{
                            "type":"string"
                        }
                    },
                    {
                        "name":"c",
                        "in":"query",
                        "description":"是否遍历子目录，是为1，否为0，用户不指定时默认值为0",
                        "required":true,
                        "enum":[1,0]
                    }
                ]
            }
        }
    },
    "components": {
        "schemas": {}
    }
}